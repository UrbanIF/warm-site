.container
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: {label: false}, html:{class:'form-signin'},
  ) do |f|
    %h2.form-signin-heading
      Вхід
      = f.text_field :email, :required => false, :autofocus => true, class: 'form-control', placeholder: 'Email'
      = f.password_field :password, class: 'form-control',  :required => false, placeholder: 'Пароль'
      = f.input :remember_me, inline_label: 'Запам\'ятати мене', input_html: {checked: false}, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, class: 'btn btn-lg btn-primary', value: 'Ввійти'
  -#= render "devise/shared/links"