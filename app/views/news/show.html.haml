-content_for :body_class, "news"
%section.news-item
  .date
    %time><
      =@news.date.strftime('%d')
      %span><=I18n.l @news.date, format: '%b'
  %article
    %h5= @news.title
    %figure
      =image_tag(@news.image.url)
    =@news.body.html_safe
    %p.right
      %span.st_facebook_large{:displaytext => "Facebook", :st_processed => "yes"}
      %span.stButton{:style => "text-decoration:none;color:#000000;display:inline-block;cursor:pointer;"}
      %span.stLarge{:style => "background-image: url(\"http://w.sharethis.com/images/facebook_32.png\");"}
      %span.st_twitter_large{:displaytext => "Tweet", :st_processed => "yes"}
      %span.stButton{:style => "text-decoration:none;color:#000000;display:inline-block;cursor:pointer;"}
      %span.stLarge{:style => "background-image: url(\"http://w.sharethis.com/images/twitter_32.png\");"}
      %span.st_vkontakte_large{:displaytext => "Vkontakte", :st_processed => "yes"}
      %span.stButton{:style => "text-decoration:none;color:#000000;display:inline-block;cursor:pointer;"}
      %span.stLarge{:style => "background-image: url(\"http://w.sharethis.com/images/vkontakte_32.png\");"}
      %span.st_googleplus_large{:displaytext => "Google +", :st_processed => "yes"}
      %span.stButton{:style => "text-decoration:none;color:#000000;display:inline-block;cursor:pointer;"}
      %span.stLarge{:style => "background-image: url(\"http://w.sharethis.com/images/googleplus_32.png\");"}
