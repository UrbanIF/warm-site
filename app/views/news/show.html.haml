- content_for :body_class, "news"
- content_for :title, " - #{@news.title(:uk)}"
%section.news-item
  .date
    %time><
      = @news.date.strftime('%d')
      %span><=I18n.l @news.date, format: '%b'
  %article
    %h5= @news.title(:uk)
    - if @news.image.present? && @news.show_mine_photo
      %figure
        =image_tag(@news.image.url)
    = @news.body(:uk).html_safe

    - @news.news_photos.each do |news_photo|
      %a{href: news_photo.photo.url}
        %img{src: news_photo.photo.thumb.url}
    = render '/partials/share'
