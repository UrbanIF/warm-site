
%section#info.info
  - if @static_text.vision_text.present?
    %article.vision
      %h3= t('info.vision')
      %h5= @static_text.vision_title
      %p= @static_text.vision_text.html_safe
  - if @static_text.values_text.present?
    %article.values
      %h3= t('info.values')
      = @static_text.values_text.html_safe
  - if @static_text.tasks_text.present?
    %article.tasks
      %h3= t('info.roles')
      = @static_text.tasks_text.html_safe
