%section.news
  %h2
    = t('projects.news')
    %span>= total_news
  -news.each do |news|
    .news-item{ class: cycle('','','last') }><
      =image_tag(news.image.thumb.url)
      %h4
        = link_to news.title_on_mine(:uk), news
      %p= news.short_on_mine(:uk)
      %time= I18n.l news.date

  .button-container
    =link_to t('projects.news'), project_news_path(@project), { class:'button red' }
